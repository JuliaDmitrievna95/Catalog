@using FCatalog.Models
@model FCatalog.Models.Review
@{
    ViewBag.Title = "Оставить отзыв";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Оставьте свой отзыв</h2>

@using (Html.BeginForm())
{

    <p>
        Имя  <br />
        @Html.EditorFor(model => model.Person)
    </p>

 
    <p>
        Отзыв:  <br />
        @Html.EditorFor(model => model.Text)
    </p>
    <p>
        <input type="hidden" value="@ViewBag.Date" name="Date" />
        <input type="hidden" value="@ViewBag.FilmId" name="FilmId" />
    </p>

    <input type="submit" value="Добавить отзыв" />

}

@Html.ActionLink("На главную", "Index", "Home")

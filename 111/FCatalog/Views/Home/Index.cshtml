@using FCatalog.Models
@model FCatalog.Models.ViewsFilm
@{
    ViewBag.Title = "Список фильмов";
}
<h2>Список фильмов</h2>
<table>
    <tr>
        <td>
            <form method="get">
                <div class="form-inline">
                    <label class="control-label">Жанр: </label>

                    @Html.DropDownList("genre", Model.Films as SelectList,
                            htmlAttributes: new { @class = "form-control" })
                    <input type="submit" value="Фильтр" class="btn btn-default" /><br>

                </div>
            </form>
        </td>
        <td>
            @Html.ActionLink("Поиск по актеру", "Contact", "Home")
            @Html.ActionLink("Поиск по режиссеру", "About", "Home")
        </td>
    </tr>
    <tr>
        <td><p><p></td>
        <td></td>
    </tr>
</table>


<table class="table">

    @foreach (var item in Model.Films)
    {
        <tr>
            <td width="100" height="150"><img src="@Url.Content("~/Pictures/" + @Path.GetFileName(item.Image))" width="100" height="150" aling="center" /></td>
            <td><h4><b>@item.Name</b></h4><br>Продессер: @item.Producer<br>Год: @item.Year<br>Жанр: @item.Genre<br>В ролях: @item.Roles<br />
            <td><a href="/Home/Details/@item.Id">Подробнее</a></td>

        </tr>
    }
</table>
<br />

